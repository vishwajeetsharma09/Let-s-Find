<% layout('/layouts/boilerplate') %>
<body>
  <h3>All listings</h3>
  <!-- <form method="get" action="/listings/new">
            <button>
                Create new listing
            </button>
        </form> -->
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for(let listing of allListings){ %>
    <a class="listing-links" href="/listings/<%=listing._id%>">
      <div class="card col">
        <img
          src="<%=listing.image%>"
          class="card-img-top"
          alt="lsting image"
          style="height: 20rem"
        />
        <div class="card-img-overlay">
          <h5 class="card-title"></h5>
          <p class="card-text"></p>
          <p class="card-text"><small>Last updated 3 mins ago</small></p>
        </div>

        <div class="card-body">
          <p class="card-text">
            <b> <%=listing.title%></b>
            &#8377;<%= listing.price%> / night
          </p>
        </div>
      </div>
    </a>
    <%}%>
  </div>
</body>
